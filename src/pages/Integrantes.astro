---
import Layout from "../layouts/Layout.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
---

<Layout tittle="Coro Mozart Historico - Integrantes">
	<Header/>
	<main class="min-h-screen bg-black snap-mandatory">
		<section class="bg-slate-100 h-full relative flex flex-col text-center text-white items-center "  >
            <div class="bg-gray-800 xl:p-4 md:p-3 p-2 x w-full z-20 shadow-xl" style="top: 80px;">
                <h1 class="xl:text-6xl md:text-4xl text-2xl" style="font-family: BeVietnamPro;">Integrantes</h1>
            </div>
            <div class="snap-center">
                <h2 class="text-white text-2xl text-center"></h2>
            </div>

            <!-- Carta del Director -->
            <div class="card md:flex md:flex-row xl:max-w-[1200px] gap-16 mx-6 justify-center mt-20 text-black md:border-4 md:p-5 p-5 md:px-10 ">
                <div class="justify-center flex-col flex">
                    <h1 class="text-4xl">Director</h1><br>
                    <img src="/director-act.jpeg" alt="Imagen" class="h-80 min-w-80">
                </div>
                <div class="md:mt-24 pt-5">
                    <h1 class="text-3xl md:text-5xl text-wrap">Diego Maximiliano Cerda Tapia</h1><br>
                    <p class="text-xl text-justify">Lorem ipsum dolor sit amet consectetur adipisicing elit. Itaque quas ab deserunt explicabo quidem dolorem excepturi laudantium blanditiis labore quibusdam repellat voluptatibus, debitis dolores hic, iusto enim tempore provident aut?</p>
                </div>
            </div>
            
            <!-- Cartas de Contraltos -->
            <div class="card xl:max-w-[1200px] justify-center mt-20 text-black md:border-4 md:p-5 py-5 m-10">
                <h1 class="text-4xl">Contraltos</h1><br>
                <div class="grid md:grid-cols-3 gap-6 mx-6">
                    <div class="justify-center flex-col flex">
                        <img src="/modelo-1.jpeg" alt="Imagen" class="h-80 min-w-80">
                        <h1 class="text-xl pt-5">Nombre Persona 1</h1>
                    </div>
                    <div class="justify-center flex-col flex">
                        <img src="/modelo 4.jpeg" alt="Imagen" class="h-80 min-w-80">
                        <h1 class="text-xl pt-5">Nombre Persona 2</h1>
                    </div>
                    <div class="justify-center flex-col flex">
                        <img src="/modelo-1.jpeg" alt="Imagen" class="h-80 min-w-80">
                        <h1 class="text-xl pt-5">Nombre Persona 3</h1>
                    </div>
                </div>
            </div>

            <!-- Cartas de Tenores -->
            <div class="card xl:max-w-[1200px] justify-center mt-20 text-black md:border-4 md:p-5 mb-20 py-5 m-10">
                <h1 class="text-4xl">Tenores</h1><br>
                <div class="grid md:grid-cols-3 gap-6 mx-6">
                    <div class="justify-center flex-col flex">
                        <img src="/modelo-2.jpeg" alt="Imagen" class="h-80 min-w-80">
                        <h1 class="text-xl pt-5">Nombre Persona 1</h1>
                    </div>
                    <div class="justify-center flex-col flex">
                        <img src="/director-act.jpeg" alt="Imagen" class="h-80 min-w-80">
                        <h1 class="text-xl pt-5">Nombre Persona 2</h1>
                    </div>
                    <div class="justify-center flex-col flex">
                        <img src="/modelo-2.jpeg" alt="Imagen" class="h-80 min-w-80">
                        <h1 class="text-xl pt-5">Nombre Persona 3</h1>
                    </div>
                </div>
            </div>
        </section>
	</main>   
	<Footer/>
</Layout>

<style>
    img {
        border-radius: 10px;
        border: 2px solid black;
        animation: reveal linear both;
        animation-timeline: view();
        animation-range: entry 25% cover 30% ;
    }
    .card {
        animation: reveal linear both;
        animation-timeline: view();
        animation-range: entry 25% cover 30% ;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
        background-color: rgba(255, 255, 255, 0.9);

        
    }

    @media (min-width: 768px) {
    .card {
        background-color: rgba(255, 255, 255, 0.959);
    }
}
    @keyframes reveal {
        from {
            opacity: 0;
            transform: translateY(200px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    
    section{
        background-image: url('/partitura.jpg');
        background-size: cover;
        /* background-attachment: fixed; */
    }

</style>